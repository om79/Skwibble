<?xml version="1.0" encoding="utf-8"?>
<com.droid.mediamultiselector.view.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:visibility="gone"
        android:id="@+id/item_media_tv_take_photo_video"
        android:drawableTop="@drawable/ic_camera"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:text="@string/label_take_photo"
        android:textSize="14sp"
        android:textColor="#CDCECE"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_media_iv_preview"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_preview_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/item_media_vid_playbutton"
        android:background="@drawable/ic_video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <View
        android:visibility="gone"
        android:id="@+id/item_media_mask"
        android:background="@color/colorItemMaskBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/item_media_iv_check"
        android:layout_gravity="top|right"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_unselected"/>

</com.droid.mediamultiselector.view.SquareFrameLayout>