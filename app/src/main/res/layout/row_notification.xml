<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/noti_main_layout"
    android:weightSum="1"
    android:background="@color/noti_back"
    android:layout_height="70dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".15"
        android:gravity="center"
        android:layout_height="70dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            ripple:placeholderImage="@mipmap/feed_default_user"
            ripple:failureImage="@mipmap/feed_default_user"
            ripple:roundAsCircle="true"

            android:id="@+id/imageView4_user" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight=".75"
        android:gravity="left|center"
        android:layout_height="70dp">



            <TextView

                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/textView6hh"
                 />
            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:textColor="@color/grey_text"
                android:textSize="10sp"
                android:id="@+id/texdwew6hh"
                />





    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:gravity="center"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="13dp"
            android:src="@mipmap/expand_arrow"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
