<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Medium"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/imaqscback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:gravity="center"
            android:orientation="horizontal"
            style="@style/SelectableItemBackground">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_weight="1"

                android:src="@mipmap/back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".65"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textVhtiew7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add Child"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageVddiew_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"

            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/full_element">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/media_control_layer"
                    android:layout_height="350dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/snappy_image_viewer"
                        android:layout_width="match_parent"
                        ripple:placeholderImage="@mipmap/image_not_found"
                        ripple:failureImage="@mipmap/image_not_found"
                        android:layout_height="350dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/video_thumb_play"
                        android:id="@+id/video_symbol"
                        android:visibility="visible"

                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/Dark"
                    android:id="@+id/image_date"
                    android:layout_below="@+id/media_control_layer"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:layout_below="@+id/image_date"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="20dp"
                    android:id="@+id/textViesssw_date"
                    android:background="@drawable/edit_child_back"
                    android:layout_height="35dp">

                    <TextView
                        android:text="Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/textsdd_date"
                        android:textColor="@color/black"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/calender"
                        android:layout_marginRight="10dp"
                        android:id="@+id/imageView7"
                        />
                </LinearLayout>


                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    style="@style/SelectableItemBackground"
                    android:layout_below="@+id/textViesssw_date"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:id="@+id/submit_buttonmm"
                    android:layout_height="35dp">



                    <Button
                        android:id="@+id/email_savrrtton"
                        style="@style/Base.Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"

                        android:textAllCaps="false"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:background="@drawable/update_btn_back"
                        android:text="Edit"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>




</LinearLayout>


