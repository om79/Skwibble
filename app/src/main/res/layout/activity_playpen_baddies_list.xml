<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_playpen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.skwibble.skwibblebook.playpen_group.Create_playpen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/Medium"
            android:gravity="center|left"
            android:weightSum="1"
            android:layout_height="50dp">


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:gravity="center"
                style="@style/SelectableItemBackground"
                android:id="@+id/imaascgack"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/back"

                    android:layout_weight="1" />
            </RelativeLayout>

            <TextView
                android:text="Buddies"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_weight=".68"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".17"
                android:gravity="center"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:gravity="center|right"
                    android:id="@+id/textaaagwffpost"
                    style="@style/SelectableItemBackground"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/texuust"
                        android:gravity="right"

                        android:textSize="14dp"
                        />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center|left"
            android:layout_height="30dp">



            <TextView
                android:text="Select buddies"
                android:layout_width="wrap_content"
                android:textColor="@color/orange"
                android:textSize="10dp"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/border_color"
                android:layout_height="0.5dp"
                ></LinearLayout>
        </LinearLayout>



        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:divider="@android:color/transparent"
            android:id="@+id/badasdf_list"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="top"
            android:visibility="visible"
            android:orientation="vertical"
            android:id="@+id/notssund_layout"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/not_xxxzfand_txt"
                android:textColor="@color/black"
                android:text="@string/not_found_create_playpen"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="125dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/not_bztn_laxyout"
                    android:background="@drawable/orange_roundes_btn"
                    android:layout_height="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Buddy"
                        android:id="@+id/not_found_ztxt"
                        android:textColor="@color/orange"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
