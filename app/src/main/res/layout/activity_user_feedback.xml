<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_feedback"
    android:layout_width="match_parent"

    tools:context="com.skwibble.skwibblebook.user_group.User_feedback"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/Medium"
            android:gravity="center"
            android:weightSum="1"
            android:layout_height="50dp">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:gravity="center"
                style="@style/SelectableItemBackground"
                android:id="@+id/imaqqwycback"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/back"

                    android:layout_weight="1" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:text="Settings"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:gravity="center"
                android:visibility="invisible"

                android:id="@+id/imageView_edit"
                android:layout_weight=".15"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/edit_icon"

                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            style="@style/SelectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/profiledfds_layout"
            android:background="@drawable/edit_text_underline"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:text="Edit Child Profile"
                    android:layout_width="match_parent"
                    android:drawableLeft="@mipmap/child_iicon"

                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:gravity="center|left"
                    android:drawablePadding="20dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:id="@+id/textView6"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/expand_arrow"/>
            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            style="@style/SelectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_underline"
            android:id="@+id/setting_layout"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:text="User Settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="center|left"

                    android:drawableLeft="@mipmap/setting_icon"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/expand_arrow"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            style="@style/SelectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_underline"
            android:id="@+id/help_layout"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <com.skwibble.skwibblebook.utility.TextViewDrawableSize
                    android:text="Help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/helptextView"

                    android:drawablePadding="20dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="20dp"
                    ripple:compoundDrawableHeight="23dp"
                    android:drawableLeft="@mipmap/help_icon"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/expand_arrow"/>

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            style="@style/SelectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center|left"
            android:id="@+id/logout_layout"
            android:background="@drawable/edit_text_underline"
            android:layout_height="60dp">

            <TextView
                android:text="Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:gravity="center|left"
                android:drawablePadding="20dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/logout"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_weight="1" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
