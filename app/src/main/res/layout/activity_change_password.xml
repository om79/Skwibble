<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.skwibble.skwibblebook.user_group.User_setting">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/Medium"
        android:gravity="center"
        android:weightSum="1"
        android:layout_height="50dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:gravity="center"
            style="@style/SelectableItemBackground"
            android:id="@+id/imageView8_fffback"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:src="@mipmap/back"

                android:layout_weight="1" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:gravity="center|left"
            android:layout_height="match_parent">

            <TextView
                android:text="Change Password"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textsView7"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:visibility="invisible"
            android:id="@+id/imageView_edit"
            android:layout_weight=".15"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@mipmap/edit_icon"

                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/edit_child_back"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/old"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:text="Old Password :"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:inputType="textPassword"

                    android:textColor="@color/black"
                    android:textColorHint="@color/border_color"
                    android:ems="10"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/editText_chilfgdfgd_name"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_child_back"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/new1"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="New Password :"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:inputType="textPassword"

                    android:textColor="@color/black"
                    android:textColorHint="@color/border_color"
                    android:ems="10"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/editText_qqwwchild_email"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_child_back"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/con"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Confirm Password :"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:inputType="textPassword"

                    android:textColor="@color/black"
                    android:textColorHint="@color/border_color"
                    android:ems="10"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/editText_chippppvcmail"
                    android:layout_weight="1" />
            </LinearLayout>
            <RelativeLayout
                style="@style/SelectableItemBackground"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:id="@+id/emailQWERtton"
                android:layout_height="match_parent">

                <Button

                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/emason"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:background="@drawable/update_btn_back"
                    android:text="Save"

                    android:layout_weight="1" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
