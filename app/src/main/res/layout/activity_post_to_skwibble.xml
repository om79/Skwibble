<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/Medium"
        android:gravity="center|left"
        android:weightSum="1"
        android:layout_height="50dp">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:gravity="center"
            style="@style/SelectableItemBackground"
            android:id="@+id/imaqseyetcback"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:src="@mipmap/back"

                android:layout_weight="1" />
        </RelativeLayout>

        <TextView

            android:gravity="center"
            android:textSize="14dp"
            android:layout_weight=".65"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/texsssView7"

            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:id="@+id/make_post"
            android:layout_height="match_parent">


                <TextView
                    android:text="Post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/textView10_post"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textAllCaps="false"
                    />



        </LinearLayout>

    </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:weightSum="1"
            android:layout_height="match_parent">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"

                    android:layout_weight=".5"
                    android:gravity="top"
                    android:layout_height="0dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:layout_margin="20dp"

                                android:background="@android:color/transparent"
                                android:hint="What did I do today?"
                                android:inputType="textMultiLine|textPersonName"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/border_color"
                                android:ems="10"
                                android:id="@+id/editText"
                                 />

                        <RelativeLayout
                            android:id="@+id/LinearLayout1"
                            android:layout_width="match_parent"

                            android:layout_height="200dp"

                            android:orientation="vertical" >

                            <com.skwibble.skwibblebook.utility.ClickableViewPager
                                android:id="@+id/vp_slider"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:id="@+id/ll_dots"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:orientation="horizontal"></LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="bottom"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:id="@+id/focusview"
                            android:layout_height="match_parent"

                            >
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:background="@drawable/edit_text_underline"
                                android:gravity="center|left"
                                android:id="@+id/photo_lay"
                                android:layout_height="match_parent">

                                <com.skwibble.skwibblebook.utility.TextViewDrawableSize
                                    android:text="Media |"
                                    android:layout_width="wrap_content"
                                    android:gravity="center|left"
                                    android:paddingLeft="5dp"
                                    android:drawablePadding="10dp"
                                    android:textSize="14dp"
                                    ripple:compoundDrawableHeight="18dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:textColor="@color/black"
                                    android:drawableLeft="@mipmap/camera_icon"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/datesphotodfsgd"
                                    />
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:visibility="visible"
                                    android:src="@mipmap/add_media"
                                    android:id="@+id/datesphotimageodfsgd"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/purple_txt"
                                    android:textSize="14dp"
                                    android:text=" No Image Selected"
                                    android:gravity="center|left"
                                    android:id="@+id/textView_Photos"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:background="@drawable/edit_text_underline"
                                android:gravity="center|left"
                                android:id="@+id/date_lay"
                                android:layout_height="match_parent">

                                <com.skwibble.skwibblebook.utility.TextViewDrawableSize
                                    android:text="Date |"
                                    android:layout_width="wrap_content"
                                    android:gravity="center|left"
                                    android:paddingLeft="5dp"
                                    android:textSize="14dp"
                                    ripple:compoundDrawableHeight="18dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:drawablePadding="10dp"
                                    android:textColor="@color/black"
                                    android:drawableLeft="@mipmap/date_icon"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/datesdfsgd"
                                     />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/purple_txt"
                                    android:textSize="14dp"
                                    android:gravity="center|left"
                                    android:id="@+id/textView_date"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:background="@drawable/edit_text_underline"
                                android:gravity="center|left"
                                android:id="@+id/post_type_lay"
                                android:layout_height="match_parent">

                                <com.skwibble.skwibblebook.utility.TextViewDrawableSize
                                    android:text="Post Type |"
                                    android:layout_width="wrap_content"
                                    android:gravity="center|left"
                                    android:id="@+id/datesphotpostodfsgd"
                                    android:drawablePadding="10dp"
                                    android:textSize="14dp"
                                    ripple:compoundDrawableHeight="18dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:textColor="@color/black"
                                    android:drawableLeft="@mipmap/post_type"
                                    android:layout_height="wrap_content"

                                     />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/purple_txt"
                                    android:textSize="14dp"
                                    android:gravity="center|left"
                                    android:id="@+id/textView_posttype"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:background="@drawable/edit_text_underline"
                                android:layout_height="match_parent"
                                android:id="@+id/privacy_lay"
                                android:gravity="center|left">

                                <com.skwibble.skwibblebook.utility.TextViewDrawableSize
                                    android:text="Privacy |"
                                    android:layout_width="wrap_content"
                                    android:gravity="center|left"
                                    android:paddingLeft="5dp"
                                    android:textSize="14dp"
                                    android:id="@+id/datesphotpoprivacystodfsgd"
                                    ripple:compoundDrawableHeight="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:drawablePadding="10dp"
                                    android:textColor="@color/black"
                                    android:drawableLeft="@mipmap/psw_icon"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/purple_txt"
                                    android:textSize="14dp"

                                    android:id="@+id/textView_privacy"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


        </LinearLayout>


</RelativeLayout>
