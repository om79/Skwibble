<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"

    android:background="@color/playpen_back"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_height="50dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center|left"
            android:weightSum="1"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/capture_camera"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="16dp"

                    android:src="@mipmap/camera_icon"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:gravity="center|left"

                android:orientation="horizontal"
                android:background="@drawable/edit_text_back"
                android:layout_height="40dp">

                <RelativeLayout
                    android:layout_width="35dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/media_layer"

                    android:layout_height="35dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"

                        android:id="@+id/capture"
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        android:src="@mipmap/image_not_found"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/video_locator"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/video_thumb"/>
                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/capture_remove"
                    android:src="@mipmap/orange_cross"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textCapSentences|textPersonName|textMultiLine"
                    android:paddingLeft="10dp"
                    android:hint="What do you think..."
                    android:textSize="12dp"
                    android:textColorHint="@color/border_color"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"

                    android:ems="10"
                    android:id="@+id/editTcmddntext3"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:layout_marginRight="3dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_menu_send"
                    android:layout_width="40dp"
                    android:layout_height="25dp"

                    android:gravity="center"
                    android:id="@+id/buttghopostn3"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/Medium"
            android:gravity="center"
            android:weightSum="1"
            android:layout_height="50dp">


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:gravity="center"
                style="@style/SelectableItemBackground"
                android:id="@+id/imaqetddcffffbasck"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/back"

                    android:layout_weight="1" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                style="@style/SelectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight=".05"
                android:gravity="center"
                android:layout_height="match_parent">


            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"

                android:gravity="center"
                android:layout_weight=".6"
                android:layout_height="match_parent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/usedageview"
                    ripple:placeholderImage="@mipmap/expand_playpen_icon"
                    ripple:failureImage="@mipmap/expand_playpen_icon"
                    ripple:roundAsCircle="true"
                    android:visibility="invisible"
                    />

                <TextView

                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textdddView7"
                    android:maxLength="15"
                    />
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                style="@style/SelectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:id="@+id/invidfsiew10"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="visible"
                    android:src="@mipmap/setting_white"
                    android:id="@+id/inviteimageView10"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                style="@style/SelectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:gravity="center"
                android:id="@+id/invidgdgdfsiew10"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="visible"
                    android:src="@mipmap/invite_icon"
                    android:id="@+id/inviteimadddgeView10"
                    />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/not_found_xaalayout"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/feed_not_found"
                android:id="@+id/xxxx"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/post_not_xd_playpen"
                android:textColor="@color/black"
                android:text="@string/post_not_found_playpen"/>



        </LinearLayout>

        <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
            android:id="@+id/swipyrefreshlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            ripple:srl_direction="bottom">
            <ListView
                android:layout_width="match_parent"
                android:id="@+id/lvuser"
                android:visibility="visible"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll"

                android:divider="@android:color/transparent"

                android:layout_height="match_parent" />
        </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>



    </LinearLayout>
</RelativeLayout>
