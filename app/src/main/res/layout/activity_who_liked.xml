<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_playpen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.skwibble.skwibblebook.playpen_group.Create_playpen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/Medium"
            android:gravity="center|left"
            android:weightSum="1"
            android:layout_height="50dp">


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:gravity="center"
                style="@style/SelectableItemBackground"
                android:id="@+id/imaascgack"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/back"

                    android:layout_weight="1" />
            </RelativeLayout>

            <TextView
                android:text="Likes"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_weight=".7"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:gravity="center|right"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:gravity="center|right"
                    android:id="@+id/textaaagwffpost"
                    style="@style/SelectableItemBackground"
                    android:visibility="invisible"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"

                        android:gravity="right"

                        android:textSize="14dp"
                        />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/border_color"
            android:dividerHeight=".5dp"
            android:id="@+id/liked_list"/>

    </LinearLayout>
</RelativeLayout>

